<% unless flash.empty? && ! content_for?(:validation_messages) %>
  <div id="flash_area">
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <%= content_tag :div, msg.html_safe, class: "flash_#{name}" %>
      <% end %>
    <% end %>

    <% if notice %>
      <p class="ui-state-highlight"><%= notice.html_safe %></p>
    <% end %>
    <% if alert %>
      <p class="ui-state-error"><%= alert.html_safe %></p>
    <% end %>
    
    <%= yield :validation_messages if content_for?(:validation_messages) %>
  </div>
<% end %>

