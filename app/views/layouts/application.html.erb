<!DOCTYPE html>
<html>
  <head>
    <title>Positive Behaviour Support</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= stylesheet_link_tag 'mobile' if mobile_device? %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if current_user %>
      <div id="top_menu">
        <div class="centre_in_browser">
          <div class="left">
            <% unless home_user_path(current_user) == request.path %>
              <%= link_to "Home", home_user_path(current_user) %>
            <% end %>
          </div>
          
          <div class="right">
            Signed in as <%= current_user.name %>. |

            <% if mobile_device? %>
              <%= link_to "Full Site", :mobile => 0 %>
            <% else %>
              <%= link_to "Mobile Site", :mobile => 1 %>
            <% end %> |

            <%= link_to "Profile", edit_user_path(current_user) %> |

            <%= link_to "Sign out", signout_path %>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="centre_in_browser">
      <% unless flash.empty? %>
	      <div id="message_area">
		      <% if notice %>
			      <p class="ui-state-highlight"><%= notice.html_safe %></p>
		      <% end %>
		      <% if alert %>
			      <p class="ui-state-error"><%= alert.html_safe %></p>
		      <% end %>
	      </div>
      <% end %>
    
      <%= yield %>
      
    </div>
    
    <div class="clear">
    </div>
    
    <div class="centre_in_browser">
      <div id="bottom_menu">
        <div class="right">
          <%= link_to "Privacy", welcome_privacy_path %> |
          <%= link_to "Terms", welcome_terms_path %> 
        </div>
      </div>
    </div>
  </body>
</html>
