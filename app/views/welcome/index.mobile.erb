<div id="sign_in" title="Sign In" data-role="page">
  <div  data-role="header">
    <h1>PBS Sign In</h1>
  </div>

  <div role="main" class="ui-content">
    <h1>Welcome to Positive Behaviour Support</h1>
    <div id='sign_in_with'>
      <h2>Sign in with</h2>
      <p class="idp">
        <%= link_to image_tag("sign-in-with-twitter-link.png", alt: "Twitter"), 
          "/auth/twitter", "data-ajax" => "false", "data-role" => "button" %>
      </p>
      <p class="idp">
        <%= link_to "Google", 
          "/auth/google_oauth2", "data-ajax" => "false", "data-role" => "button" %>
      </p>
    </div>
  </div>
</div>

