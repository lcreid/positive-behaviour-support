<%= content_tag_for(:div, @routine) do %>
  <h1><%= "#{@routine.name} -- #{@routine.person.name}" %></h1>
    <h1>Expectations</h1>
  <%= content_tag_for(:table, @routine) do %>
    <thead>
      <tr>
        <th>Expectation</th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @routine.expectations) do |e| %>
        <td><%= e.description %></td>
      <% end %>
    </tbody>
  <% end %>
  <% if @routine.goal %>
    <% g = @routine.goal %>
    <h1>Goal</h1>
    <p><%= "#{g.name}: With #{g.target.to_s} clean #{'routine'.pluralize(g.target)}, #{g.description}" %></p>
  <% end %>
  <p><%= link_to("Back", :back) %></p>
<% end %>

