<div id="home" title="PBS" selected="true">
  <div id="user-name" class="container">
    <h1><%= @user.name %></h1>
  </div>
  <div style="display:inline;float:left;width:60%;">
    <div id="patients" class="container">
      <% if @user.subjects.count == 1 %>
        <%= render partial: "people/subject_dashboard", locals: { patient: @user.subject.first } %>
      <% else %>
        <h1>Subjects</h1>
        <div class="content">
          <ul>
            <%= content_tag_for(:li, @user.subjects) do | patient | %>
              <%= link_to patient.name, person_path(patient) %>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  
  <div style="display:bl;float:right;width:35%;">
    <div class="container">
      <div id="messages">
        <h1>Messages</h1>
        <div class="content">
          <%= render(partial: "messages/message", 
            collection: @user.unread_messages.order(created_at: :desc), 
            spacer_template: "messages/message_spacer") || "No unread messages" %>
        </div>
      </div>
    </div>
  </div>
  <div style="clean:both;"></div>
</div>
