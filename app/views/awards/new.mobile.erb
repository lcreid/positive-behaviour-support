<div id="new_award"  title="PBS" selected="true">
  <%= form_tag(:awards) do %>
    <%= hidden_field_tag :goal_id, @goal.id %>
    <h1 style="text-align: center;">Congratulations!</h1>
    <p>You've earned <%= @goal.description %></p>
    <%= label_tag "number_of_rewards", "Rewards (Enter 1 to #{@goal.pending})" %>
    <%= number_field_tag "number_of_rewards", "1", {min: 1, max: @goal.pending, size: 2} %>
    <p>
      <%= submit_tag "Give Reward!" %>
    </p>
  <% end %>
</div>
