<%= validation_messages @goal %>

<%= form_for shallow_args(@goal.person, @goal) do |rf| %>
  <%= rf.hidden_field :person_id %>
  <p>
    <%= rf.label :name, "Goal Name: ", class: "ui-hidden-accessible" %>
    <%= rf.text_field :name, placeholder: "Goal Name" %>
  </p>
  <p class="vertical_align_children">
    <%= rf.label :description, "Goal Description: ", class: "ui-hidden-accessible" %>
    <%= rf.text_area :description, placeholder: "Description" %>
  </p>
  <p>
    <%= rf.label :target, "Target: " %>
    <%= rf.text_field :target, size: 5, type: "number", value: 1, min: 1, placeholder: "Target" %>
  </p>

  <p>
    <%= yield :cancel_button if content_for? :cancel_button %>
    <%= rf.submit 'Save' %>
  </p>
<% end %>

